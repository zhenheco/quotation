{
  "name": "quotation-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "preview:cf": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy:cf": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:e2e:visual": "tsx tests/e2e/visual-test.ts",
    "test:e2e:playwright": "playwright test",
    "test:e2e:playwright:ui": "playwright test --ui",
    "test:watch": "vitest watch",
    "migrate": "tsx scripts/run-migration.ts",
    "test:migration": "tsx scripts/test-migration.ts",
    "seed": "tsx scripts/seed-test-data.ts",
    "seed:admin": "tsx scripts/seed-admin-test-data.ts",
    "seed:payments": "tsx scripts/seed-payment-test-data.ts",
    "supabase": "supabase",
    "supabase:login": "supabase login",
    "supabase:link": "supabase link",
    "supabase:status": "supabase status",
    "supabase:db:push": "supabase db push",
    "supabase:db:pull": "supabase db pull",
    "supabase:db:reset": "supabase db reset",
    "supabase:migration:new": "supabase migration new",
    "supabase:gen:types": "supabase gen types typescript --local > types/database.types.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@neondatabase/serverless": "^1.0.2",
    "@pdf-lib/fontkit": "^1.1.1",
    "@react-email/components": "^0.5.6",
    "@react-email/render": "^1.3.2",
    "@react-pdf/renderer": "^4.3.1",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.62.17",
    "@types/jszip": "^3.4.0",
    "@types/nodemailer": "^7.0.2",
    "hono": "^4.10.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.552.0",
    "next": "15.5.7",
    "next-intl": "^4.3.12",
    "nodemailer": "^7.0.9",
    "pdf-lib": "^1.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-email": "^4.3.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.2.1",
    "resend": "^6.1.3",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251111.0",
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^1.11.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.6",
    "msw": "^2.11.5",
    "pg": "^8.16.3",
    "playwright": "^1.56.1",
    "puppeteer": "^24.26.1",
    "sharp": "^0.34.5",
    "supabase": "^2.51.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wrangler": "^4.45.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c 'if [[ \"$0\" != legacy_backup/* && \"$0\" != src/* ]]; then eslint --fix \"$0\"; fi'"
    ]
  }
}
